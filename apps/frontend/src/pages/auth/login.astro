---
import AuthLayout from '@/layouts/AuthLayout.astro';
import LoginForm from '@/components/auth/LoginForm';
import NoScriptFallback from '@/components/ui/NoScriptFallback';

// Static page metadata
const pageTitle = "Login";
const pageDescription = "Sign in to your Questlog account to discover games, write reviews, and connect with fellow gamers.";
---

<AuthLayout 
  title={pageTitle}
  description={pageDescription}
  noIndex={true}
>
  <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <a href="/" class="inline-block">
          <h1 class="text-4xl font-bold text-primary">
            Questlog
          </h1>
          <p class="mt-2 text-sm text-muted">
            The social network for gamers
          </p>
        </a>
      </div>
      
      <div class="space-y-6">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-primary">
            Sign In
          </h2>
          <p class="mt-2 text-sm text-muted">
            Don't have an account?{' '}
            <a 
              href="/auth/register" 
              class="font-medium text-brand-primary hover:text-brand-accent transition-colors"
            >
              Sign up here
            </a>
          </p>
        </div>
        
        <!-- React Island -->
        <LoginForm client:load />
        
        <!-- Fallback content for no-JS users -->
        <NoScriptFallback client:load feature="login form" />
      </div>
      
      <!-- Footer links -->
      <div class="text-center space-y-2">
        <div class="flex justify-center space-x-4 text-sm">
          <a 
            href="/auth/forgot-password" 
            class="text-muted hover:text-primary transition-colors"
          >
            Forgot your password?
          </a>
        </div>
        
        <div class="flex justify-center space-x-4 text-xs text-muted">
          <a href="/privacy" class="hover:text-secondary transition-colors">
            Privacy Policy
          </a>
          <span>•</span>
          <a href="/terms" class="hover:text-secondary transition-colors">
            Terms of Service
          </a>
          <span>•</span>
          <a href="/support" class="hover:text-secondary transition-colors">
            Support
          </a>
        </div>
    </div>
  </div>
</AuthLayout>