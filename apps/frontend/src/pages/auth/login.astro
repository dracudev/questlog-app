---
import AuthLayout from '@/layouts/AuthLayout.astro';
import LoginForm from '@/components/auth/LoginForm';
import NoScriptFallback from '@/components/fallbacks/NoScriptFallback';

// Static page metadata
const pageTitle = "Login";
const pageDescription = "Log in to your Questlog account to discover games, write reviews, and connect with fellow gamers.";
---

<AuthLayout 
  title={pageTitle}
  description={pageDescription}
  noIndex={true}
>
  <div class="max-w-md w-full space-y-8">
      <div class="text-center">
        <a href="/" class="inline-block">
          <h1 class="text-4xl font-bold text-[var(--text-primary)]">
            Questlog
          </h1>
          <p class="mt-2 text-sm text-[var(--text-secondary)]">
            The social network for gamers
          </p>
        </a>
      </div>
      
      <div class="space-y-6">
        <div class="text-center">
          <h2 class="text-2xl font-bold text-[var(--text-primary)]">
            Log In
          </h2>
          <p class="mt-2 text-sm text-[var(--text-secondary)]">
            Don't have an account?{' '}
            <a 
              href="/auth/register" 
              class="font-medium text-[var(--brand-primary)] hover:text-[var(--brand-accent)] transition-colors"
            >
              Sign up here
            </a>
          </p>
        </div>
        
        <!-- React Island -->
        <LoginForm client:load />
        
        <!-- Fallback content for no-JS users -->
        <NoScriptFallback client:load feature="login form" />
      </div>
  </div>
</AuthLayout>